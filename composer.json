{
    "name": "mattkenefick/twigtovue",
    "type": "library",
    "description": "Convert Twig templates to Vue templates",
    "keywords": [
        "twig",
        "vue",
        "symfony",
        "template",
        "html"
    ],
    "homepage": "https://polymermallard.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Kenefick",
            "email": "matt@polymermallard.com",
            "homepage": "https://www.mattkenefick.com",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=5.4",
        "querypath/querypath": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "PolymerMallard\\TwigToVue\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PolymerMallard\\TwigToVue\\Test\\": "test"
        }
    },
    "scripts": {
        "phpunit": "php vendor/phpunit/phpunit/phpunit",
        "test": "phpunit --verbose tests --testdox",
        "test-one": "php vendor/phpunit/phpunit/phpunit tests/Single.php"
    }
}
